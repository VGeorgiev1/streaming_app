extends layout.pug

block content
	.container
		.row
			.col
				.card.border-dark
					h5.card-header.white-text.text-center.py-4
						strong Log in
					.card-body.px-lg-5.pt-0
						form.md-form(style="color: #757575;")
							input#username.form-control(type="text", name="name")
							label(for="username") Username
							input#password.form-control(type="password")
							label(for="password") Password
							button.btn.btn-outline-success.btn-rounded.btn-block.my-4.waves-effect.z-depth-0(type="submit") Log in